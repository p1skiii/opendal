[build-system]
build-backend = "setuptools.build_meta"
requires = ["setuptools>=61.0"]

[project]
name = "opendal"
version = "0.46.0"
description = "Apache OpenDALâ„¢ Python Binding - Unified Data Access Layer"
license = { text = "Apache-2.0" }
readme = "README.md"
requires-python = ">=3.10"
authors = [
    {name = "Apache OpenDAL", email = "dev@opendal.apache.org"},
]
classifiers = [
  "Programming Language :: Rust",
  "Programming Language :: Python :: Implementation :: CPython",
]
keywords = ["storage", "rust", "s3", "azure", "gcs"]

# Core services - development mode (no strict dependencies)
dependencies = [
    # opendal-core will be installed separately for development/testing
]

# Optional service groups - for development and production use
[project.optional-dependencies]
database = ["opendal-database"]
cloud = ["opendal-cloud"] 
advanced = ["opendal-advanced"]
all = [
    "opendal-database",
    "opendal-cloud", 
    "opendal-advanced"
]

[project.urls]
Documentation = "https://opendal.apache.org/docs/python/index.html"
Homepage = "https://opendal.apache.org/"
Repository = "https://github.com/apache/opendal"

[tool.setuptools]
packages = ["opendal"]
package-dir = {"opendal" = "python/opendal"}

[dependency-groups]
benchmark = [
  "boto3>=1.37.9",
  "boto3-stubs[essential]>=1.37.9",
  "gevent>=24.11.1",
  "greenify>=0.4.3",
  "greenlet>=3.1.1",
  "pydantic>=2.10.6",
]
dev = ["maturin>=1.8.2"]
docs = ["mkdocs", "mkdocs-material", "mkdocstrings[python]", "mkdocs-jupyter"]
lint = ["ruff>=0.9.10"]
test = [
  "pytest>=8.3.5",
  "pytest-asyncio>=0.25.3",
  "python-dotenv>=1.0.1",
  "pydantic-settings>=2.8.1",
]

[tool.uv]
cache-keys = [
  { file = "pyproject.toml" },
  { file = "Cargo.toml" },
  { file = "packages/**/*.rs" },
  { file = "../../core/**/*.rs" },
]

[tool.ruff]
line-length = 88
fix = true

[tool.ruff.lint]
ignore = ["E402", "F403", "F405"]
select = ["E", "F", "I"]

[tool.ruff.lint.pycodestyle]
max-doc-length = 88

[tool.ruff.lint.pydocstyle]
convention = "numpy"

[tool.ruff.format]
docstring-code-format = true

[tool.ruff.lint.isort]
known-first-party = ["opendal"]